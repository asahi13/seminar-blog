---
import { Image } from 'astro:assets';
const { description, cards } = Astro.props;

---
<p>
    {description}
</p>
<swiper-container class="mySwiper" pagination="true" 
pagination-type="progressbar" navigation="true" keyboard="true">
{cards.map(card =>(
    <swiper-slide>
      <div>
      <Image src={card.image} alt={card.alt} />
      <p>{card.text}</p>
      </div>
    </swiper-slide>
   ))}
</swiper-container>

<script>
// import function to register Swiper custom elements
import { register } from 'swiper/element/bundle';
// register Swiper custom elements
register();

</script>
  <style>
    swiper-container {
      width: 100%;
      height: 500px;
    }

    swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    swiper-slide img {
      display: block;
      width: 100%;
      height: 500px;
      object-fit: cover;
    }


</style>